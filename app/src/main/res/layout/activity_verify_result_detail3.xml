<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1017"
    android:orientation="vertical"
    tools:context=".verify_result_go.VerifyResultDetailActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_btn"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:gravity="center_horizontal"
                    android:layout_marginRight="24dp"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="부정이슈" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="335dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="315dp"
                        android:layout_marginVertical="20dp" >

                        <ImageView
                            android:id="@+id/model_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img_model_detail" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:layout_marginTop="40dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_model_card_shadow" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="315dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="44dp">

                        <ImageView
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/verify_result_model_ranking"/>

                        <TextView
                            android:id="@+id/ranking"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="26dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="1" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginVertical="3dp"
                        android:background="@drawable/bg_model_result_detail_context_box" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:layout_marginVertical="2dp"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:textColor="#959191"
                                android:text="롯데칠성" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:textColor="#959191"
                                android:text="님께 가장 적합한 모델로 검증됐어요!" />

                        </LinearLayout>

                    </FrameLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/model_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    android:text="고윤정" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/model_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#CCFFFFFF"
                        android:textSize="14dp"
                        android:text="영화ㆍ드라마 배우" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#CCFFFFFF"
                        android:textSize="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="   |   " />

                    <TextView
                        android:id="@+id/model_agency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#CCFFFFFF"
                        android:textSize="14dp"
                        android:text="MMA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#CCFFFFFF"
                        android:textSize="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="   |   " />

                    <TextView
                        android:id="@+id/model_debut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#CCFFFFFF"
                        android:textSize="14dp"
                        android:text="2019년 데뷔" />

                </LinearLayout>

                <!--  키워드 목록  -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/keyword_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="20dp"
                android:background="#191821" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="부정이슈" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#A2A5AA"
                    android:textSize="14dp"
                    android:text="학교 폭력, 탈세 등 부정적인 영향을 줄 수 있는 논란이\n있었는지 분석했어요." />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="392dp"
                android:background="#1D1C27" >

                <ImageView
                    android:id="@+id/graph"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/model_result_detail3_graph" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="타 광고 계약기간 분석" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#A2A5AA"
                    android:textSize="14dp"
                    android:text="해당 모델의 타 광고 계약 기간을 조사했어요." />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="311dp"
                android:layout_marginBottom="50dp"
                android:background="#0F1017" >

                <ImageView
                    android:id="@+id/graph2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/model_result_detail3_ad_graph" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>