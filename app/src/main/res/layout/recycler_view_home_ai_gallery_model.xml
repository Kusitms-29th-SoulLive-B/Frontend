<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:layout_width="175dp"
        android:layout_height="191dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#1D1C27"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="12dp" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/model_img"
                android:src="@drawable/img_model_sample"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="117dp" />

            <ImageView
                android:src="@drawable/bg_model_card_shadow"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="117dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="120dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/model_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="모델명"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/model_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5B71"
                    android:layout_marginLeft="12dp"
                    android:textSize="12dp"
                    android:text="직업" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="148dp"
                android:orientation="horizontal" >

                <FrameLayout
                    android:id="@+id/keyword1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/bg_keyword" >

                    <TextView
                        android:id="@+id/keyword1_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginVertical="2dp"
                        android:layout_gravity="center"
                        android:text="키워드1" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/keyword2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_keyword" >

                    <TextView
                        android:id="@+id/keyword2_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginVertical="2dp"
                        android:layout_gravity="center"
                        android:text="키워드2" />

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>