<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1017"
    android:orientation="vertical"
    tools:context=".home.ModelDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/back_btn"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="24dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="모델 상세보기" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="335dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@android:color/transparent" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="315dp"
                    android:layout_marginVertical="20dp" >

                    <ImageView
                        android:id="@+id/model_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_model_sample" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_model_card_shadow" />

                    <ImageView
                        android:id="@+id/like_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_heart_circle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="185dp">

                        <TextView
                            android:id="@+id/model_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="36dp"
                            android:textStyle="bold"
                            android:text="배우명" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/model_job"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCFFFFFF"
                                android:textSize="14dp"
                                android:text="직업" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCFFFFFF"
                                android:textSize="14dp"
                                android:text="  |  " />

                            <TextView
                                android:id="@+id/model_agency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCFFFFFF"
                                android:textSize="14dp"
                                android:text="소속사명" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCFFFFFF"
                                android:textSize="14dp"
                                android:text="  |  " />

                            <TextView
                                android:id="@+id/model_debut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCFFFFFF"
                                android:textSize="14dp"
                                android:text="데뷔 일자" />

                        </LinearLayout>

                        <!--  키워드 목록  -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/keyword_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="주요 이슈" />
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_negative"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#5B5B71"
                    android:textSize="12dp"
                    android:text="   부정     " />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_positive"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#5B5B71"
                    android:textSize="12dp"
                    android:text="   긍정" />

            </LinearLayout>

            <ImageView
                android:id="@+id/issue_graph"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_positive"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="42dp"
                    android:layout_height="155dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:padding="8dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/model_issue_group"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_model_issue_box" >

                        <TextView
                            android:id="@+id/keyword1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textColor="#CDCBD4"
                            android:layout_marginHorizontal="6dp"
                            android:layout_marginVertical="4dp"
                            android:layout_gravity="center"
                            android:text="환혼 2 출연으로, '라이징 스타' 배우 재발견" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/bg_model_issue_box" >

                        <TextView
                            android:id="@+id/keyword2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textColor="#CDCBD4"
                            android:layout_marginHorizontal="6dp"
                            android:layout_marginVertical="4dp"
                            android:layout_gravity="center"
                            android:text="'무빙'MZ 세대가 열광한 고윤정" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:background="@drawable/bg_model_issue_box" >

                        <TextView
                            android:id="@+id/keyword3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13dp"
                            android:textColor="#CDCBD4"
                            android:layout_marginHorizontal="6dp"
                            android:layout_marginVertical="4dp"
                            android:layout_gravity="center"
                            android:text="고윤정 졸업 사진 논란에, '원본 공개했다'" />

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="작품 활동" />

                <TextView
                    android:id="@+id/more_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5B71"
                    android:textSize="12dp"
                    android:text="전체보기" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:background="#1D1C27">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/work1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#CDCBD4"
                        android:textSize="14dp"
                        android:text="이제, 곧 죽습니다" />

                    <TextView
                        android:id="@+id/work1_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#878793"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:text="2023" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/work2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#CDCBD4"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:text="무빙" />

                    <TextView
                        android:id="@+id/work2_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#878793"
                        android:textSize="14dp"
                        android:text="2023" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="최근 광고 활동" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#A2A5AA"
                    android:textSize="14dp"
                    android:text="해당 광고의 시간, 화제성 등을 분석했어요" />

            </LinearLayout>

            <!--  최근 광고 활동 목록  -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ad_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="데이터 분석" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="#A2A5AA"
                    android:textSize="14dp"
                    android:text="팔로워와 검색량 추이를 분석했어요" />

            </LinearLayout>

            <ImageView
                android:id="@+id/favor_img"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/img_model_favor_sample"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="소속사 정보" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textColor="#878793"
                            android:textSize="14dp"
                            android:text="소속사명" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#878793"
                            android:textSize="14dp"
                            android:text="이메일" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:textColor="#CDCBD4"
                            android:textSize="14dp"
                            android:text="MAA" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#CDCBD4"
                            android:textSize="14dp"
                            android:text="MAA@Official.com" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>