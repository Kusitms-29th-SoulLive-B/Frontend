<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1017"
    android:orientation="vertical"
    tools:context=".ModelDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/back_btn"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="24dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:text="모델 상세보기" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="335dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="@android:color/transparent" >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="315dp"
                    android:layout_marginVertical="20dp" >

                    <ImageView
                        android:id="@+id/model_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_model_sample" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bg_model_card_shadow" />

                    <ImageView
                        android:id="@+id/like_btn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="end"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:src="@drawable/ic_heart_circle" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="185dp">

                        <TextView
                            android:id="@+id/model_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="36dp"
                            android:text="배우명" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/model_job"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCFFFFFF"
                                android:textSize="14dp"
                                android:text="직업" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCFFFFFF"
                                android:textSize="14dp"
                                android:text="  |  " />

                            <TextView
                                android:id="@+id/model_agency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCFFFFFF"
                                android:textSize="14dp"
                                android:text="소속사명" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCFFFFFF"
                                android:textSize="14dp"
                                android:text="  |  " />

                            <TextView
                                android:id="@+id/model_debut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#CCFFFFFF"
                                android:textSize="14dp"
                                android:text="데뷔 일자" />

                        </LinearLayout>

                        <!--  키워드 목록  -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/keyword_recyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>

</LinearLayout>