<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/previous2_ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_btn"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/close2_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close_btn"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar3"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="60"
        android:progressBackgroundTint="#191821"
        android:progressTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="기업과 어울리는\n브랜드 키워드를 골라볼까요?"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar3" />

    <ImageButton
        android:id="@+id/guide_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/guide_verify"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginLeft="-20dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="최대 3가지 이하로 이미지를 선택해주세요."
        android:textColor="#878793"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />



    <ImageButton
        android:id="@+id/keyword1_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/key1_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="30dp"/>


        <ImageButton
            android:id="@+id/keyword2_ib"
            android:layout_width="86dp"
            android:layout_height="85dp"
            android:background="@drawable/key2_verify"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="37dp"/>

        <ImageButton
            android:id="@+id/keyword3_ib"
            android:layout_width="86dp"
            android:layout_height="85dp"
            android:background="@drawable/key3_verify"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="37dp"/>


    <ImageButton
        android:id="@+id/choose1_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/click_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="30dp"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/choose2_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:background="@drawable/click_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="37dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/choose3_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:background="@drawable/click_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="37dp"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/keyword4_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:background="@drawable/key4_verify"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <ImageButton
        android:id="@+id/keyword5_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:background="@drawable/key5_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        android:layout_marginLeft="150dp"/>

    <ImageButton
        android:id="@+id/keyword6_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:background="@drawable/key6_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/keyword5_ib"
        android:layout_marginLeft="270dp"/>



    <ImageButton
        android:id="@+id/choose4_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:background="@drawable/click_verify"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/choose5_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:background="@drawable/click_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        android:layout_marginLeft="150dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/choose6_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:background="@drawable/click_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/keyword5_ib"
        android:layout_marginLeft="270dp"
        android:visibility="gone"/>


    <ImageButton
        android:id="@+id/keyword7_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:background="@drawable/key7_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        android:layout_marginLeft="30dp"/>

    <ImageButton
        android:id="@+id/keyword8_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:background="@drawable/key8_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        android:layout_marginLeft="150dp"/>

    <ImageButton
        android:id="@+id/keyword9_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:background="@drawable/key9_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        android:layout_marginLeft="270dp"/>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="120dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="최고의"
            android:textColor="#878793" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="최상의"
            android:textColor="#878793" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1위의"
            android:textColor="#878793" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginTop="225dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="훌륭한"
            android:textColor="#878793" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="압도적인"
            android:textColor="#878793" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="뛰어난"
            android:textColor="#878793" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/choose7_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:background="@drawable/click_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        android:layout_marginLeft="30dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/choose8_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:background="@drawable/click_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        android:layout_marginLeft="150dp"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/choose9_ib"
        android:layout_width="86dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:background="@drawable/click_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        android:layout_marginLeft="270dp"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:gravity="center"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="월등한"
            android:textColor="#878793"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="빼어난"
            android:textColor="#878793" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="거대한"
            android:textColor="#878793" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_verify3_btn"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/editself_verify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_verify2_btn"
        android:layout_width="155dp"
        android:layout_height="60dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/gray_btn"
        android:enabled="false"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/next_verify3_btn"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />



</androidx.constraintlayout.widget.ConstraintLayout>