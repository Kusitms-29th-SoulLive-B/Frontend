<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <FrameLayout
        android:layout_width="360dp"
        android:layout_height="106dp"
        android:background="@drawable/bg_model_card_dark"
        android:layout_marginBottom="10dp" >

        <ImageView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/bg_keyword_model_shadow" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/model_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/img_model_sample" />

        <ImageView
            android:id="@+id/like_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="45dp"
            android:padding="5dp"
            android:src="@drawable/ic_heart_circle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="170dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5B71"
                    android:textSize="12dp"
                    android:text="기업명" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5B71"
                    android:textSize="12dp"
                    android:text="  |  " />

                <TextView
                    android:id="@+id/model_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5B5B71"
                    android:textSize="12dp"
                    android:text="모델명" />

            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="키워드 제목" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>