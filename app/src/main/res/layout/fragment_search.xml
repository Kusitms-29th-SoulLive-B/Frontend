<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">

    <ImageButton
        android:id="@+id/myPage_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="280dp"
        android:background="@drawable/mypage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맞춤 모델을\n직접 찾아볼 수 있어요"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="70dp"/>

    <ImageView
        android:id="@+id/searchBox_iv"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/searchbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<EditText
        android:id="@+id/search_et"
        android:layout_width="280dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="155dp"
        android:layout_marginRight="40dp"
        android:background="@null"/>-->

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="190dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        app:layout_constraintBottom_toBottomOf="@id/searchBox_iv"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="많이 찾는 키워드"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="280dp"/>

    <ImageButton
        android:id="@+id/refreshTag_ib"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/retag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="280dp"/>

    <LinearLayout
        android:id="@+id/keyword1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/refreshTag_ib"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:weightSum="6">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/tag01"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/tag2"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/tag3"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyword2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/keyword1_layout"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="6">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/tag9"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/tag02"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/tag11"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyword3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/keyword2_layout"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:weightSum="6">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/tag7"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/tag8"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/recentFavoriteModel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 인기 모델"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/keyword3_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recentFavoriteModel_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/recentFavoriteModel_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>