<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1017"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </ScrollView>

    <!--    바텀 네비게이션    -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_navigation"
        android:layout_marginBottom="30dp"
        android:layout_gravity="bottom|center_horizontal" />

    <ImageView
        android:id="@+id/verify_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bottom_navigation_verify"
        android:layout_marginBottom="80dp"
        android:layout_gravity="bottom|center_horizontal" />

    <FrameLayout
        android:id="@+id/home_btn"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="70dp"
        android:layout_gravity="bottom" >

        <ImageView
            android:id="@+id/home_ic"
            android:layout_width="35dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/bottom_navigation_home_white" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/explore_btn"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="70dp"
        android:layout_gravity="bottom|end" >

        <ImageView
            android:id="@+id/explore_ic"
            android:layout_width="30dp"
            android:layout_height="58dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="35dp"
            android:src="@drawable/bottom_navigation_explore_gray" />

    </FrameLayout>


</FrameLayout>